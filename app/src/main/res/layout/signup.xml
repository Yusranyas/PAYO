<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6AAED0">


    <ImageView
        android:id="@+id/kotak"
        android:layout_width="400dp"
        android:layout_height="580dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/backgroundd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="541dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Sign Up"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="491dp"
        android:text="Better Today. Easy Online Payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="513dp"
        android:text="Make Your Experience Payment More"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="627dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="90dp"
        android:text="Apakah kamu sudah memiliki akun?  Sign In"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="388dp"
        android:layout_marginRight="32sp"
        android:layout_marginBottom="293dp"
        android:background="@drawable/email"
        android:fontFamily="@font/poppin"
        android:hint="Password"
        android:paddingLeft="16sp"
        android:textColorHint="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/lastname"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginTop="269dp"
        android:layout_marginBottom="418dp"
        android:background="@drawable/email"
        android:fontFamily="@font/poppin"
        android:hint="Last Name"
        android:paddingLeft="16sp"
        android:textColorHint="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/kotak"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="@+id/kotak"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="268dp"
        android:layout_marginBottom="418dp"
        android:background="@drawable/email"
        android:fontFamily="@font/poppin"
        android:hint="First Name"
        android:paddingLeft="16sp"
        android:textColorHint="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/kotak"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="@+id/kotak"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="328dp"
        android:layout_marginRight="32sp"
        android:layout_marginBottom="353dp"
        android:background="@drawable/email"
        android:fontFamily="@font/poppin"
        android:hint="Email"
        android:paddingLeft="16sp"
        android:textColorHint="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="202dp"
        android:text="Forgot Password? Click Here"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirm"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="448dp"
        android:layout_marginRight="32sp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/email"
        android:fontFamily="@font/poppin"
        android:hint="Confirm your Password"
        android:paddingLeft="16sp"
        android:textColorHint="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signup"
        android:layout_width="260dp"
        android:layout_height="49dp"
        android:layout_marginTop="561dp"
        android:layout_marginBottom="121dp"
        android:backgroundTint="#1A497A"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>